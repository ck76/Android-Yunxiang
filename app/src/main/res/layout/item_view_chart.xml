<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/chart_left_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/price_margin_start"
        android:layout_marginEnd="12dp"
        android:textSize="16sp"
        tools:text="Top1" />


    <TextView
        android:id="@+id/chart_right_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="@dimen/price_margin_end"
        android:textSize="16sp"
        tools:text="翡翠" />

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/chart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/chart_right_label"
        android:layout_toEndOf="@id/chart_left_label">

    </com.github.mikephil.charting.charts.LineChart>


</RelativeLayout>
