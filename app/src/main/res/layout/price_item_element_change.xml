<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/txt_range_label"
        style="@style/price_item_info_title"
        tools:text="涨幅:" />

    <TextView
        android:id="@+id/txt_range"
        style="@style/price_item_info"
        android:layout_marginEnd="16dp"
        android:textColor="@color/price_goods_rise"
        tools:text="0.25%" />

    <TextView
        android:id="@+id/txt_speed_label"
        style="@style/price_item_info_title"
        tools:text="涨速:" />

    <TextView
        android:id="@+id/txt_speed"
        style="@style/price_item_info"
        android:textColor="@color/price_goods_drop"
        tools:text="-12.11%" />

</merge>
