<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/ll_buyout_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@color/white"
        android:visibility="visible">

        <TextView
            android:id="@+id/txt_buyout_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/personal_item_price"
            android:textSize="21sp"
            tools:text="¥ 200000" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_weight="1"
            android:text="@string/product_label_buyout"
            android:textColor="@color/product_detail_label"
            android:textSize="10sp" />


        <TextView
            android:id="@+id/txt_buyout"
            style="@style/personal_item_buyout"
            android:layout_gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_auction_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:background="@color/white"
        android:visibility="visible">

        <TextView
            android:id="@+id/txt_auction_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/personal_item_price"
            android:textSize="21sp"
            tools:text="¥ 200000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="@string/product_current_auction_price"
            android:textColor="@color/product_detail_label"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/txt_auction_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:drawableStart="@drawable/ic_time"
            android:drawablePadding="6dp"
            android:text="@string/product_current_auction_time"
            android:textColor="@color/product_detail_label"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/txt_auction"
            style="@style/personal_item_auction"
            android:layout_gravity="center" />

    </LinearLayout>

    <TextView
        android:id="@+id/txt_follow_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@color/white"
        android:gravity="end"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:text="@string/product_follow_number"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/txt_check_proof"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_gravity="end"
        android:background="@color/product_bg"
        android:drawableEnd="@drawable/ic_more"
        android:drawablePadding="12dp"
        android:gravity="center_vertical|end"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="@string/product_check_certificate"
        android:textColor="@color/product_detail_label"
        android:textSize="12sp" />


</LinearLayout>
